<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="pu_identity" transaction-type="RESOURCE_LOCAL">
    <!--      org.hibernate.jpa.HibernatePersistenceProvider-->
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>cn.org.xmind.commons.identity.db.entity.AccountActiveLog</class>
    <class>cn.org.xmind.commons.identity.db.entity.Group</class>
    <class>cn.org.xmind.commons.identity.db.entity.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <!--配置Hibernate方言 -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
      <!--设置外连接抓取树的最大深度 -->
      <property name="hibernate.max_fetch_depth" value="3"/>
      <!--自动输出schema创建DDL语句 -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
