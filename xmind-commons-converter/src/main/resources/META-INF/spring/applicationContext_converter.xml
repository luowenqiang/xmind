<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
          http://www.springframework.org/schema/beans    http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">  
        <property name="converters">  
            <list>  
                <bean class="cn.org.xmind.commons.converter.StringToDateConverter"/>
                <bean class="cn.org.xmind.commons.converter.DateToStringConverter"/>
            </list>  
        </property>  
    </bean>
    
    
    <bean id="encodingAdaptionJsonProvider" class="cn.org.xmind.commons.converter.EncodingAdaptionJsonProvider"/>
</beans>
